{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 500,
  "data": {
    "url": "data/youtube-users-by-country-2025-clean.csv",
    "format": {
      "type": "csv",
      "parse": {
        "TotalUsers2024Feb": "number"
      }
    }
  },
  "transform": [
    {
      "window": [
        { "op": "rank", "as": "rank" }
      ],
      "sort": [{ "field": "TotalUsers2024Feb", "order": "descending" }]
    },
    { "filter": "datum.rank <= 10" }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "country",
      "type": "nominal",
      "sort": "-x",
      "title": "Country",
      "axis": {
        "labelFontSize": 16,
        "titleFontSize": 18
      }
    },
    "x": {
      "field": "TotalUsers2024Feb",
      "type": "quantitative",
      "title": "Number of Users",
      "axis": { "format": "," , "labelFontSize": 14, "titleFontSize": 16 }
    },
    "color": { "value": "#1f77b4" },
    "tooltip": [
      { "field": "country", "type": "nominal", "title": "Country" },
      { "field": "TotalUsers2024Feb", "type": "quantitative", "title": "Total Users", "format": "," }
    ]
  }
}
