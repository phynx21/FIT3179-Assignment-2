{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "data": {
        "url": "data/world_50m.geo.json",
        "format": { "type": "json", "property": "features" }
      },
      "transform": [
        { "calculate": "'No data available for ' + datum.properties.name", "as": "note" }
      ],
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": {
        "tooltip": { "field": "note", "type": "nominal" }
      }
    },
    {
      "data": {
        "url": "data/world_50m.geo.json",
        "format": { "type": "json", "property": "features" }
      },
      "transform": [
        {
          "lookup": "properties.iso_a2",
          "from": {
            "data": {
              "url": "data/global-yt-stats.csv",
              "format": { "type": "csv" }
            },
            "key": "flagCode",
            "fields": [
              "YouTubeUsers_Penetration_Pct_2024Feb",
              "TotalUsers2024Feb",
              "TotalPopulation"
            ]
          }
        },
        {
          "calculate": "toNumber(datum.YouTubeUsers_Penetration_Pct_2024Feb)",
          "as": "Penetration_num"
        },
        { "filter": "isFinite(datum.Penetration_num)" },
        {
          "calculate": "format(datum.Penetration_num, ',.1f') + '%'",
          "as": "Penetration_tooltip"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "Penetration_num",
          "type": "quantitative",
          "scale": { "scheme": "blues", "domainMin": 0},
          "title": "YouTube Penetration Rate",
          "legend": {"labelExpr": "datum.label + '%'"}
            },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "Country" },
          { "field": "Penetration_tooltip", "type": "nominal", "title": "Penetration" },
          { "field": "TotalUsers2024Feb", "type": "quantitative", "title": "Total Users", "format": ",d" },
          { "field": "TotalPopulation", "type": "quantitative", "title": "Population", "format": ",d" }
        ]
      }
    }
  ]
}

